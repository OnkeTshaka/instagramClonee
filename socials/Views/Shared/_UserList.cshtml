
@model IEnumerable<ApplicationUser>
<div class="inner-wrapper">
    <h2 class="subtitle center">@ViewBag.Message</h2>
    @if (Model != null && Model.Any())
    {
        foreach (var user in Model)
        {
            <div class="post tight">
                <div class="post__top">
                    <a href="@Url.Action("Details", "Profile", new { @id = user.UserName })">
                        @if (user.Photo == null)
                        {
                            <img src="@Url.Content(String.Format("~/Images/{0}", user.GetPhoto()))" />

                        }
                        else
                        {
                            <img src="@Url.Content(String.Format("~/Images/Profiles/{0}/{1}", user.UserName, user.Photo))" />
                        }
                    </a>
                    <a href="@Url.Action("Details", "Profile", new { @id = user.UserName })" class="post__user">@user.UserName</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No results found.</p>
    }
</div>
