@model ApplicationUser


<div class="thin-wrapper">
    @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { enctype="multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        <h4 class="subtitle center">Update Your Profile.</h4>
        @Html.HiddenFor(model => model.Id)
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Username" })

        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })

        @Html.TextBoxFor(m => m.RealName, new { @placeholder = "Full name" })

        @Html.TextBoxFor(m => m.Bio, new { @placeholder = "Bio..." })

        <p>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input type="file" name="ProfilePictureFile" />
                </div>
            </div>
        </p>
        <p>
            <button type="submit" class="btn btn-default"><i class="fa fa-user"></i>Save</button>
        </p>
       
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


